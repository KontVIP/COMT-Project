<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.stylishclothes">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@drawable/logo_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StylishClothes">
        <activity
            android:name=".SplashScreen"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".catalog.OneProductActivity" />
        <activity android:name=".catalog.ProductsActivity" />
        <activity android:name=".catalog.EditProductActivity" />
        <activity android:name=".catalog.TrousersActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".auth.ForgotPasswordActivity" />
        <activity android:name=".auth.RegisterUserActivity" />
        <activity android:name=".auth.AuthActivity"/>

    </application>

</manifest>