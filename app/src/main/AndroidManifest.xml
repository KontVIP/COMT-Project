<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shop.stylishclothes" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StylishClothes"
        android:usesCleartextTraffic="true" >
        <activity
            android:name="com.shop.stylishclothes.admin_panel.AdminPanelActivity"
            android:exported="false" />
        <activity
            android:name="com.shop.stylishclothes.home.CreatePostActivity"
            android:exported="false"
            android:label="@string/title_activity_create_post"
            android:theme="@style/Theme.StylishClothes.NoActionBar" />
        <activity
            android:name="com.shop.stylishclothes.auth.SplashScreen"
            android:exported="true"
            android:theme="@style/SplashTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.shop.stylishclothes.catalog.OneProductActivity" />
        <activity android:name="com.shop.stylishclothes.catalog.ProductListActivity" />
        <activity android:name="com.shop.stylishclothes.catalog.EditProductActivity" />
        <activity android:name="com.shop.stylishclothes.shoppingcart.ContactDetailsActivity" />
        <activity android:name="com.shop.stylishclothes.shoppingcart.CheckoutActivity" />
        <activity android:name="com.shop.stylishclothes.MainActivity" />
        <activity android:name="com.shop.stylishclothes.auth.ForgotPasswordActivity" />
        <activity android:name="com.shop.stylishclothes.auth.AuthActivity" />
    </application>

</manifest>