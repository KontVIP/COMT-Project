<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.stylishclothes">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StylishClothes"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".home.CreatePostActivity"
            android:exported="false"
            android:label="@string/title_activity_create_post"
            android:theme="@style/Theme.StylishClothes.NoActionBar" />
        <activity
            android:name=".auth.SplashScreen"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".catalog.OneProductActivity" />
        <activity android:name=".catalog.ProductListActivity" />
        <activity android:name=".catalog.EditProductActivity" />
        <activity android:name=".shoppingcart.ContactDetailsActivity" />
        <activity android:name=".shoppingcart.CheckoutActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".auth.ForgotPasswordActivity" />
        <activity android:name=".auth.AuthActivity" />
    </application>

</manifest>