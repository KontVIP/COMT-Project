<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shop.stylishclothes.home.CreateAdFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="4dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Зображення: "
            android:textSize="24sp"/>

        <ImageView
            android:id="@+id/ad_image_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/znak_voprosa" />

        <Button
            android:id="@+id/upload_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="Upload Photo"/>

        <EditText
            android:id="@+id/product_id_edit_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Product id"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|bottom">

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/create_ad_button"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Створити"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-black"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>


</LinearLayout>